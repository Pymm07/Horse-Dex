    print("8.) Black Forest Horse")
    print("9.) Kiger Mustang")
    print("10.) Ardennais")
    print("11.) Tennessee Walking Horse")
    print("12.) Irish Sport Horse")

    userInput = input("\nWhich horse would you like to pick? ").lower()

    if userInput == "arabian horse":
        print("\n==== Arabian Horse ====")
        print(arabianHorse.attributeAnimalia)
        print(arabianHorse.attributeChordata)
        print(arabianHorse.attributeMammalia)
        print(arabianHorse.attributePerissodactyla)
        print(arabianHorse.attributeEquidae)
