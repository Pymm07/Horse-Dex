class Kingdom:
    def __init__(self):
        self.attributeAnimalia = "Kingdom of horses would be Animalia"

class Phylum(Kingdom):
    def __init__(self):
        super().__init__()
        self.attributeChordata = "Horse's Phylum would be Chordata and their characteristics would be..."

class Class_(Phylum):  
    def __init__(self):
        super().__init__()
        self.attributeMammalia = "Horse's Class would be Mammalia and their characteristics would be..."

class Order(Class_):
    def __init__(self):
        super().__init__()
        self.attributePerissodactyla = "Horse's Order would be Perissodactyla and their characteristics would be..."

class Family(Order):
    def __init__(self):
        super().__init__()
        self.attributeEquidae = "Horse's Family would be Equidae and their characteristics would be..."

class Species(Family):
    def __init__(self, name):
        super().__init__()
        self.name = name
        self.attributeEquus = f"Horse's Species would be Equus ferus caballus ({self.name}) and their characteristics would be..."


arabianHorse = Species("Arabian Horse")
mustang = Species("Mustang")
americanPaintHorse = Species("American Paint Horse")
dutchWarmblood = Species("Dutch Warmblood")
morganHorse = Species("Morgan Horse")
icelandicHorse = Species("Icelandic Horse")
knabstrupper = Species("Knabstrupper")
blackForestHorse = Species("Black Forest Horse")
kigerMustang = Species("Kiger Mustang")
ardennais = Species("Ardennais")
tennesseeWalkingHorse = Species("Tennessee Walking Horse")
irishSportHorse = Species("Irish Sport Horse")

while True:
    print("\n1.) Arabian Horse")
    print("2.) Mustang")
    print("3.) American Paint Horse")
    print("4.) Dutch Warmblood")
    print("5.) Morgan Horse")
    print("6.) Icelandic Horse")
